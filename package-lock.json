       const express = require('express');
       const axios = require('axios');  // If you're using Axios for API calls
       const app = express();
       const port = process.env.PORT || 3000;  // Use Render's environment port

       // Example route
       app.get('/', async (req, res) => {
         try {
           const response = await axios.get('https://api.example.com/data');  // Replace with your API
           res.send(`Hello from Render! Data: ${JSON.stringify(response.data)}`);
         } catch (error) {
           res.status(500).send('Error fetching data');
         }
       });

       app.listen(port, () => {
         console.log(`Server running on port ${port}`);
       });
       
